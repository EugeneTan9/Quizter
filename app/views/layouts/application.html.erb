<!DOCTYPE html>
<html>
  <head>
    <title>Quizter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application' %>

	<script src='https://kit.fontawesome.com/a076d05399.js'></script>
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<style>
.card {display:inline-block;}

</style>

</head>

<body class="bg-light">

	<div class="fun-hover">


		<nav class="navbar navbar-expand-lg navbar-dark bg-dark"">
			<div class=" d-flex  align-items-center">
				<button class="navbar-toggler btn btn-outline-danger mx-3" type="button" data-toggle="collapse" data-target="#navbarNav"
					aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon "><i class="fas fa-bars" style="color:#fff; font-size:28px;"></i></span>
				</button>
				<a class="navbar-brand" href="/">Quizter</a>
			</div>


			<div class="collapse navbar-collapse " id="navbarNav">
				<ul class="navbar-nav  mr-auto" >
                 <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
       <i class="fas fa-poll-h"></i>   Quizzes
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          						<%= link_to '<i class="fas fa-poll"></i> Quizzes'.html_safe, quizzes_path,{:class => "dropdown-item"} %>
                      <div class="dropdown-divider"></div>
          						<%= link_to '<i class="far fa-question-circle"></i> Create a Quiz'.html_safe, new_quiz_path,{:class => "dropdown-item"} %>
     					  	
          						<%= link_to '<i class="fas fa-pen"></i> My Created Quizzes'.html_safe, quizzes_created_url,{:class => "dropdown-item"} %>
							
					</li>
					
					<li class="nav-item">
						<%= link_to '<i class="fas fa-certificate"></i> Earned Badges'.html_safe, badges_path,{:class => "nav-link"} %>

						<li class="nav-item">
						<%= link_to '<i class="fas fa-pen"></i> My Created Badges'.html_safe, badges_created_url,{:class => "nav-link"} %>
					</li>


				</ul>

				<ul class="navbar-nav">
					<li class="nav-item">

					</li>
					<% if user_signed_in?%>
                 <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
       <i class="fas fa-border-all"></i>   Dashboard
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
					<%= link_to '<i class="fas fa-user-circle"></i> Profile'.html_safe, edit_user_registration_path,{:class => "dropdown-item"} %>
					<%= link_to '<i class="fas fa-sign-out-alt"></i> Log out'.html_safe, destroy_user_session_url, :class => "dropdown-item", method: :delete  %>
					</li>
					<% else %>
					<%= link_to 'Log in', new_user_session_url, {:class => "nav-link"}  %>
					<% end %>
				</ul>
			</div>

		</nav>
	</div>
	<div class="container text-center">
		<%= yield %>
	</div>
</body>

</html>