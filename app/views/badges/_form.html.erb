<div class="container col-6 offset-3 text-left">
	<%= form_with(model: badge, local: true) do |form| %>
	  <% if badge.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(badge.errors.count, "error") %> prohibited this badge from being saved:</h2>

	      <ul>
	        <% badge.errors.full_messages.each do |message| %>
	          <li><%= message %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>
	  <%= form.hidden_field :quiz_id, value: @quiz_id %>

	  <div class="field">
	    <%= form.label :title %>
	    <%= form.text_field :title, :class => "form-control", :required => true %>
	  </div>

	  <br>

	  <div class="field">
	    <%= form.label :"Criteria for Passing 0-100 (eg 75, 90)" %>
	    <%= form.select :criteria, options_for_select(0..100), :selected => :criteria %>
	  </div>

	  <br>

	  <div class="field">
	    <%= form.label "Upload an image for your badge" %><br>
			<%= form.file_field :img_url, :required => true, :id => "upload" %>
	  </div>

	  <br>

	  <div class="actions">
	    <%= form.submit :class => "btn btn-outline-primary"%>
	  </div>
	<% end %>
</div>