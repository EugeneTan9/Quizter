<p id="notice"><%= notice %></p>


   <h1>My Earned Badges</h1>
<div class="row">
    <div class="col-md-12">
        <form  action="/badges" class="mb-2 mt-4" method="get">
        <input  type="text" placeholder="Search" name="search" aria-label="Search" >
        <button class="btn btn-outline-primary btn-sm mb-2">Search</button>
        </form> 
    </div>
</div>

<div class="card-columns">
<% @badges.each do |badge| %>
    <div class="card" >
        <% if badge.img_url.present? %>
            <%= image_tag url_for(badge.img_url), :style => "width: 10rem;", :class => "card-img-top" %>
        <% else %>
            <img class="card-img-top" src="/test/badgeunderconstruction.png" alt="<%= quiz.title %>" style="width: 10rem;">
        <% end %>
        <div class="card-body">
        <h5 class="card-title"><%= badge.title %></h5>
        <p class="card-text"><u>Earned</u> <br/> <%= badge.created_at %></p>
        <p class="card-text"><small class="text-muted">Requirements here...</small></p>
    </div>

    </div>
           
   
<% end %>
</div>

